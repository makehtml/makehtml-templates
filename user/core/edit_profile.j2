{% extends "user/base.j2" %}
{% from 'macros/form.j2' import bs_btn, bs_text, render_field_errors %}

{% block user_content %}
  <h1>{{ _('Edit profile') }}</h1>
  <form action="{{ url_for('user.edit') }}" method="post">
    {{ form.hidden_tag() }}
    {{ render_field_errors(form.csrf_token) }}
    {{ bs_text(form.username) }}
    {{ bs_text(form.firstname) }}
    {{ bs_text(form.lastname) }}
    {{ bs_text(form.phone) }}
    {{ bs_btn(form.submit) }}
    <a class="ms-3" href="{{ url_for_security('change_password') }}">{{ _('Change password') }}</a>
  </form>
{% endblock user_content %}
