{% extends "base.j2" %}
{% from 'macros/form.j2' import bs_btn, bs_text %}

{% block content %}
  <div class="container py-4">
    <section class="p-5 bg-body-tertiary border rounded-3">
      <h3 class="main__title">{{ _fsdomain('Reset password') }}</h3>
      <form class="form" action="{{ url_for_security('reset_password', token=reset_password_token) }}" method="post" name="reset_password_form">
        {{ reset_password_form.hidden_tag() }}
        {{ bs_text(reset_password_form.password) }}
        {{ bs_text(reset_password_form.password_confirm) }}
        {{ bs_btn(reset_password_form.submit) }}
      </form>
      <hr class="my-4">
      <nav class="nav">
        <a class="nav-link" href="{{ url_for_security('login') }}{%- if 'next' in request.args -%}?next={{ request.args.next|urlencode }}{%- endif -%}">{{ _fsdomain('Login') }}</a>
      </nav>
    </section>
  </div>
{% endblock content %}
