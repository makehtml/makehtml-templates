{% extends "base.j2" %}
{% from 'macros/form.j2' import bs_btn, bs_text %}

{% block content %}
  <div class="container py-4">
    <section class="p-5 bg-body-tertiary border rounded-3">
      <h3 class="main__title">{{ _fsdomain('Change password') }}</h3>
      <form class="form" action="{{ url_for_security('change_password') }}" method="post" name="change_password_form">
        {{ change_password_form.hidden_tag() }}
        {% if active_password %}
          {{ bs_text(change_password_form.password) }}
        {% else %}
          <h3>{{ _fsdomain('You do not currently have a password - this will add one.') }}</h3>
        {% endif %}
        {{ bs_text(change_password_form.new_password) }}
        {{ bs_text(change_password_form.new_password_confirm) }}
        {{ bs_btn(change_password_form.submit) }}
      </form>
    </section>
  </div>
{% endblock content %}
