{% extends "base.j2" %}
{% from 'macros/form.j2' import bs_btn, bs_text %}

{% block content %}
  <div class="container py-4">
    <section class="p-3 p-sm-4 p-md-5 bg-body-tertiary border rounded-3">
      <h3 class="main__title">{{ _fsdomain('Send password reset instructions') }}</h3>
      <form class="form form--security" action="{{ url_for_security('forgot_password') }}" method="post" name="forgot_password_form">
        {{ forgot_password_form.hidden_tag() }}
        {{ bs_text(forgot_password_form.email) }}
        {{ bs_btn(forgot_password_form.submit) }}
      </form>
      <hr class="my-4">
      <nav class="nav">
        <a class="nav-link" href="{{ url_for_security('login') }}{%- if 'next' in request.args -%}?next={{ request.args.next|urlencode }}{%- endif -%}">{{ _fsdomain('Login') }}</a>
      </nav>
    </section>
  </div>
{% endblock content %}
