{% extends "base.j2" %}
{% from 'macros/form.j2' import base, btn %}

{% block content %}
  <section class="main__jumbotron">
    <h3 class="main__title">{{ _fsdomain('Send password reset instructions') }}</h3>
    <form class="form form--security" action="{{ url_for_security('forgot_password') }}" method="post" name="forgot_password_form">
      {{ forgot_password_form.hidden_tag() }}
      {{ base(forgot_password_form.email) }}
      {{ btn(forgot_password_form.submit) }}
    </form>
    <footer class="main__footer">
      <p class="main__links">
        <a class="link" href="{{ url_for_security('login') }}{%- if 'next' in request.args -%}?next={{ request.args.next|urlencode }}{%- endif -%}">{{ _fsdomain('Login') }}</a>
      </p>
    </footer>
  </section>
{% endblock content %}
